<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
 
    <!--
    	See http://wiki.openmrs.org/display/docs/Module+liquibase+File for 
    	documentation on this file.
    
        See http://www.liquibase.org/manual/home#available_database_refactorings
        for a list of supported elements and attributes
    -->
 
 	 
    <changeSet id="tp1" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="drug_dosage"/></not>
		</preConditions>
		<comment>
			Creating the drug_dosage table
		</comment>
		
		<createTable tableName="drug_dosage">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>					
			<column name="drugName" type="varchar(255)" >
			     <constraints nullable="false"/>
            </column>           
			<column name="units" type="varchar(255)" >
			<constraints nullable="false"/>
            </column>			
			 <column name="dosageValue" type="float" >
			    <constraints nullable="false"/>
            </column>

             <column name="maxDoseValue" type="float" />			
            <column name="dosageRoute" type="varchar(255)" >
			<constraints nullable="false"/>
            </column>          
            <column name="dosageFrequence" type="varchar(255)" >
			<constraints nullable="false"/>
            </column>	         
			<column name="instructions" type="varchar(1000)"/>
            <column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true"></constraints>
			</column> 
			<column name="voided_by" type="int"/>
            <column name="date_voided" type="DATETIME"/>
            <column name="void_reason" type="varchar(255)"/>
            <column name="changed_by" type="int"/>
            <column name="date_changed" type="DATETIME"/>
            <column name="creator" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="voided" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
		</createTable>
    </changeSet>
    
    
     <changeSet id="tp2" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="patient_protocal"/></not>
		</preConditions>
		<comment>
			Creating the patient_protocal table
		</comment>
		
		<createTable tableName="patient_protocal">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>			
			<column name="patientId" type="int" >
			    <constraints nullable="false"/>
            </column>				
			 <column name="protocalId" type="int" >
			    <constraints nullable="false"/>
            </column>            
             <column name="dateStarted" type="DATETIME"/>            
            <column name="dateStopped" type="DATETIME"/>								 
		</createTable>		
    </changeSet>

	 <changeSet id="tp3" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="protocal"/></not>
		</preConditions>
		<comment>
			Creating the protocal table
		</comment>
		
		<createTable tableName="protocal">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>
			
			 <column name="protocalName" type="varchar(255)" >
			    <constraints nullable="false"/>
            </column>
						
            <column name="numberOfPhases" type="int" />
	           
            <column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true"></constraints>
			</column> 
			<column name="voided_by" type="int"/>
            <column name="date_voided" type="DATETIME"/>
            <column name="void_reason" type="varchar(255)"/>
            <column name="changed_by" type="int"/>
            <column name="date_changed" type="DATETIME"/>
            <column name="creator" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="voided" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
		</createTable>	
    </changeSet>
    
    
     <changeSet id="tp4" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="phase_table"/></not>
		</preConditions>
		<comment>
			Creating the phase_table
		</comment>
		
		<createTable tableName="phase_table">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>			
			 <column name="phaseName" type="varchar(255)" >
			    <constraints nullable="false"/>
            </column>						
            <column name="protocal_id" type="int" />            
            <column name="numberOfDays" type="int" />            
            <column name="phase_order" type="int" />	         
            <column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true"></constraints>
			</column> 
			<column name="voided_by" type="int"/>
            <column name="date_voided" type="DATETIME"/>
            <column name="void_reason" type="varchar(255)"/>
            <column name="changed_by" type="int"/>
            <column name="date_changed" type="DATETIME"/>
            <column name="creator" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="voided" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
		</createTable>

		<addForeignKeyConstraint constraintName="protocol_id_fk" baseTableName="phase_table" baseColumnNames="protocal_id"  referencedTableName="protocal"
                                 referencedColumnNames="id" />
      </changeSet>
       
      <changeSet id="tp5" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="stage_day"/></not>
		</preConditions>
		<comment>
			Creating the stage_day table
		</comment>
		
		<createTable tableName="stage_day">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>			
			 <column name="dayNumber" type="int" >
			    <constraints nullable="false"/>
            </column>						
           <column name="phase_id" type="int" />        
            <column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true"></constraints>
			</column> 
			<column name="voided_by" type="int"/>
            <column name="date_voided" type="DATETIME"/>
            <column name="void_reason" type="varchar(255)"/>
            <column name="changed_by" type="int"/>
            <column name="date_changed" type="DATETIME"/>
            <column name="creator" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="voided" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
		</createTable>		
		<addForeignKeyConstraint constraintName="phase_id_fk" baseTableName="stage_day" baseColumnNames="phase_id"  referencedTableName="phase_table"
                                 referencedColumnNames="id" />
    </changeSet>
    



     <changeSet id="tp6" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="action"/></not>
		</preConditions>
		<comment>
			Creating the actions table
		</comment>	
		<createTable tableName="action">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>			
			<column name="actionName" type="varchar(255)">
			 <constraints nullable="false"/>	
			</column>
			<column name="description" type="varchar(1000)"/>					 
		</createTable>	
    </changeSet>
     
      <changeSet id="tp7" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="day_doze"/></not>
		</preConditions>
		<comment>
			Creating the day_doze table
		</comment>		
		<createTable tableName="day_doze">
			<column name="drug_id" type="int" >
				<constraints primaryKey="true" nullable="false"/>
			</column>			
            <column name="day_id" type="int" >
				<constraints primaryKey="true" nullable="false"/>
			</column>									 
		</createTable>      
		<addForeignKeyConstraint constraintName="drug_id_fk" baseTableName="day_doze" baseColumnNames="drug_id"  referencedTableName="drug_dosage"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="day_id_fk" baseTableName="day_doze" baseColumnNames="day_id"  referencedTableName="stage_day"
                                 referencedColumnNames="id" />	
    </changeSet>

	 <changeSet id="tp8" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="day_actions"/></not>
		</preConditions>
		<comment>
			Creating the day_doze table
		</comment>		
		<createTable tableName="day_actions">
			<column name="action_id" type="int" >
				<constraints primaryKey="true" nullable="false"/>
			</column>			
            <column name="day_id" type="int" >
				<constraints primaryKey="true" nullable="false"/>
			</column>									 
		</createTable>      
		<addForeignKeyConstraint constraintName="action_id_fk" baseTableName="day_actions" baseColumnNames="action_id"  referencedTableName="action"
                                 referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="day_id_fk2" baseTableName="day_actions" baseColumnNames="day_id"  referencedTableName="stage_day"
                                 referencedColumnNames="id" />	
    </changeSet>
     
	   <changeSet id="tp9" author="Mutesasira Moses">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="diagnosis_table"/></not>
		</preConditions>
		<comment>
			Creating the diagnosis_table
		</comment>
		
		<createTable tableName="diagnosis_table">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>			
			 <column name="diagnosis" type="varchar(255)" >
			    <constraints nullable="false"/>
            </column>						
            <column name="protocal_id" type="int" />           
		</createTable>

		<addForeignKeyConstraint constraintName="protocol_id_fk2" baseTableName="diagnosis_table" baseColumnNames="protocal_id"  referencedTableName="protocal"
                                 referencedColumnNames="id" />
      </changeSet>

	
</databaseChangeLog>